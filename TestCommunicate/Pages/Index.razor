@page "/"

@foreach (int n in Indexes)
{
    <SubComponent Index="@n" Deleted="@ItemDeleted" />
    <br />
}

@code
{
    private readonly List<int> Indexes = new List<int>();

    protected override void OnInitialized()
    {
        Console.WriteLine("Creating list");
        for (int x = 1; x < 11; x++) Indexes.Add(x);
    }

    private void ItemDeleted(int n)
    {
        Console.WriteLine($"ItemDeleted {n}");
        Indexes.Remove(n);
    }
}